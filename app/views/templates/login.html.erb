<!-- Wrap all page content here -->
<div id="wrap">
  <!-- Make page fluid -->
  <div class="row">
    <!-- Page content -->
    <div id="content" class="full-page">
      <div class="col-md-4 col-md-offset-4" style="top: 150px;">
        <!-- tile -->
        <section class="tile color transparent-black">
          <!-- tile header -->
          <div class="tile-header text-center">
            <h1><strong>茂号</strong>  商家平台</h1>
          </div>
          <!-- /tile header -->

          <!-- tile body -->
          <div class="tile-body nopadding">
            <form class="form-horizontal form-padd" role="form" style="margin:0 auto 4%; padding: 0 50px;" method="post" action="">
                <div class="form-group">
                  <hr style=" margin-bottom:0px">
                </div>
                <div class="form-group">
                  <label>手机号</label>
                  <input type="text" class="form-control" id="user_name" name="userName" rel="popover" required="required" style="font-size:15px">
                </div>
                <div class="form-group">
                  <label>密码</label>
                  <input type="password" class="form-control" required="required" id="pwd" name="userPassword" rel="popover"  style="font-size:15px">
                </div>
                <div class="form-group" style="text-align:center;margin-bottom:15px;">
                    <button type="submit" name="submit" class="btn-submit btn btn-cyan" rel="tooltip" title="立即登录" style="padding: 10px 35px;">登录</button>
                </div>
                <div class="text-center hlp-txt hvr-pop" style="padding:0px 10px 0px 0;"><%= link_to "忘记密码?", temp_forgetpasswd_path %></div>
            </form>
          </div>
          <!-- /tile body -->
          <div class="tile-footer">
            
          </div>
        </section>
        <!-- /tile -->
      </div>
      
    </div>
    <!-- /Page content -->  
  </div>
</div>
<!-- Wrap all page content end -->
      
