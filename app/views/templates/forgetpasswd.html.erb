<!-- Wrap all page content here -->
<div id="wrap">
  <!-- Make page fluid -->
  <div class="row">
    <!-- Page content -->
    <div id="content" class="full-page">
      <div class="col-md-4 col-md-offset-4" style="top: 18%;">
        <!-- tile -->
        <section class="tile color transparent-black">
          <!-- tile header -->
          <div class="tile-header text-center">
            <h1><strong>茂号</strong>  商家平台</h1>
          </div>
          <!-- /tile header -->

          <!-- tile body -->
          <div class="tile-body nopadding">
            <form class="form-horizontal form-padd" role="form" style="margin:0 auto 4%; padding: 0 50px;" method="post" action="">
                <div class="form-group">
                  <h2 style="font-weight: 300;font-size:18px;">找回密码</h2>
                  <hr style=" margin-bottom:0px">
                </div>
                <div class="form-group">
                  <label>手机号</label>
                  <input type="text" class="form-control" id="user_name" name="userName" rel="popover" required="required" style="font-size:15px">
                </div>
                <div class="form-group">
                  <label>验证码</label>
                  <div class="input-group">
                    <input type="password" class="form-control" required="required" id="pwd" name="userPassword" rel="popover"  style="font-size:15px">
                    <span class="input-group-btn">
                      <button class="btn btn-greensea" type="button">发送验证码</button>
                    </span>
                  </div>
                </div>
                <div class="form-group">
                  <label>新密码</label>
                  <input type="password" class="form-control" required="required" id="pwd" name="userPassword" rel="popover"  style="font-size:15px">
                </div>
                <div class="form-group" style="text-align:center;margin-bottom:15px;">
                    <button type="submit" name="submit" class="btn-submit btn btn-cyan" rel="tooltip" title="立即登录" style="padding: 10px 35px;">提交</button>
                </div>
                <div class="text-center hlp-txt hvr-pop" style="padding:0px 10px 0px 0;">
                  <%= link_to temp_login_path do %>
                    <i class="fa fa-chevron-left"></i> 返回登录
                  <% end %>
                </div>
            </form>
          </div>
          <!-- /tile body -->
          <div class="tile-footer">
            
          </div>
        </section>
        <!-- /tile -->
      </div>
      
    </div>
    <!-- /Page content -->  
  </div>
</div>
<!-- Wrap all page content end -->
      
