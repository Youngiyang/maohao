<div class="tile-body nopadding">
  <%= form_for(:session, url: admin_login_path, html: { class: "form-horizontal form-padd", style: "margin:0 auto 4%; padding: 0 50px;" }) do |f| %>

      <div class="form-group">
        <hr style=" margin-bottom:0px">
      </div>
      <div class="form-group">
        <label>账号</label>
        <%= f.text_field :login_name, class: "form-control", style: "font-size:15px", rel: "popover", required: "required", placeholder: "用户名或者邮箱" %>
      </div>
      <div class="form-group">
        <label>密码</label>
      <%= f.password_field :password, class: "form-control", required: "required", rel: "popover", style: "font-size:15px" %>
      </div>
      <div class="form-group" style="text-align:center;margin-bottom:15px;">
        <%= f.submit "登录", title: "立即登录", rel: "tooltip", class: "btn-submit btn btn-cyan", style: "padding: 10px 35px;" %>
      </div>
      <div class="text-center hlp-txt hvr-pop" style="padding:0px 10px 0px 0;">忘记密码请联系管理员</div>
  <% end %>
</div>
